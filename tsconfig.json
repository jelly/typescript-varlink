{
	"include": ["src"],
	"exclude": ["**/*.test.ts"],
	// Visit https://aka.ms/tsconfig to read more about this file
	"compilerOptions": {
		"rootDir": "./src",
		"outDir": "./dist",

		"module": "nodenext",
		"target": "esnext",
		"lib": ["esnext"],
		"types": ["node"],

		"declaration": true,
		"strict": true,
		"isolatedModules": true,
		"skipLibCheck": true
	}
}
